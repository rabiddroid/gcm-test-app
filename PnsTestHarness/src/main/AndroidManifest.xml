<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.rabiddroid.gcm.testharness" >

    <!-- min sdk version overriden in gradle -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="net.rabiddroid.gcm.testharness.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="net.rabiddroid.gcm.testharness.permission.C2D_MESSAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayNotificationMessagesActivity"
            android:label="@string/title_activity_notifications_list"
            android:parentActivityName=".MainActivity"    >
        </activity>

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <category android:name="net.rabiddroid.gcm.testharness" />
            </intent-filter>
        </receiver>


        <!-- [START gcm_listener] -->
        <service
            android:name="net.rabiddroid.gcm.testharness.PnsGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->

        <!-- [START instanceId_listener] -->
        <service
            android:name="net.rabiddroid.gcm.testharness.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID"/>
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->
        <service
            android:name="net.rabiddroid.gcm.testharness.RegistrationIntentService"
            android:exported="false">
        </service>
        <service
            android:name="net.rabiddroid.gcm.testharness.RefreshTokenService"
            android:exported="false">
        </service>

        <provider
            android:name=".ReceivedNotificationsContentProvider"
            android:authorities="net.rabiddroid.gcm.testharness.receivednotifications"
            android:enabled="true"
            android:exported="false" >
        </provider>
    </application>

</manifest>
